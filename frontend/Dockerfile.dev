# Use an official Node runtime as a parent image
FROM node:18-alpine

# Set the working directory in the container
WORKDIR /app

# Copy package.json and package-lock.json (if available)
COPY package*.json ./

# Install project dependencies
RUN npm install

# Copy the rest of the application code into the container
COPY . .

# Initialize Tailwind CSS if config files don't exist
# (Run this after copying the source code that might contain tailwind.config.js)
RUN if [ ! -f tailwind.config.js ] ; then \
      echo "Tailwind config not found, initializing..."; \
      npx tailwindcss init -p; \
    else \
      echo "Tailwind config found."; \
    fi

# Make port 5173 available to the world outside this container
EXPOSE 5173

# Run the app when the container launches
# Use --host to expose the dev server to the network
CMD ["npm", "run", "dev", "--", "--host"] 